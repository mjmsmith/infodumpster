extends layout

block content
  h1
    | Which posts
    - if (poster)
      |  by #{poster.name}
    - if (tag)
      |  tagged with "#{tag}"
    |  in #{titleSuffix(site, category, startDate, endDate)} have the most favorites?
  
  table.results
    tr
      th Date
      th Favorites
      - if (!poster)
        th User
      th Post
    - each p in posts
      tr
        td.date
          | #{date(p.created)}
        td.number
          a(href = postFavoritesUrl(site, p.id)) #{p.favorites_count}
        - if (!poster)
          td.user
            a(href = profileUrl(p.user_id)) #{p.name}
        td
          a(href = postUrl(site, p.id)) !{titleHtml(p.title, p.deleted)}
  
  script.
    setupInfiniteScroll()