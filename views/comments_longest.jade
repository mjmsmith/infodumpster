extends layout

block content
  h1
    | Which comments
    - if (commenter)
      |  by #{commenter.name}
    |  in #{titleSuffix(site, category, startDate, endDate)} are the longest?
  
  table.results
    tr
      th Date
      th Length
      - if (!commenter)
        th User
      th Post
    - each c in comments
      tr
        td.date
          | #{date(c.created)}
        td.number
          | #{c.length}
        - if (!commenter)
          td.user
            a(href = profileUrl(c.user_id)) #{c.name}
        td
          a(href = commentUrl(site, c.post_id, c.comment_id)) !{titleHtml(c.title, c.deleted)}
  
  script
    setupInfiniteScroll()