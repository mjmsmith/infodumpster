extends layout

block content
  h1 Who favorited the most posts by #{poster.name} in #{titleSuffix(site, category, startDate, endDate)}?
  
  table.results
    tr
      th Favorites
      th User
    - each f in favers
      tr
        td.number
          a(href = postsFavoritedUrl(site, category, poster.id, f.id, startDate, endDate)) #{f.count}
        td
          a(href = profileUrl(f.id)) #{f.name}
  
  script.
    setupInfiniteScroll()