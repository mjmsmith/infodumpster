extends layout

block content
  h1 Which posts by #{poster.name} were favorited by #{faver.name} in #{titleSuffix(site, category, startDate, endDate)}?
  
  table.results
    tr
      th Date
      th Post
    - each p in posts
      tr
        td.date
          | #{date(p.created)}
        td
          a(href = postUrl(site, p.id)) !{titleHtml(p.title, p.deleted)}
  
  script.
    setupInfiniteScroll()